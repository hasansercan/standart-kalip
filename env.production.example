# Production Environment Variables Template
# Copy this file to .env and configure your values

# Database Configuration
MONGO_URI=mongodb://localhost:27017/standart_kalip_production

# JWT Configuration - CHANGE THIS IN PRODUCTION
JWT_SECRET=your_very_secure_jwt_secret_key_minimum_32_characters_long

# Cloudinary Configuration (Image Upload Service)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Stripe Configuration (Payment Service)
STRIPE_SECRET_KEY=sk_live_your_stripe_live_secret_key

# Server Configuration
NODE_ENV=production
PORT=5000
FRONTEND_URL=https://decayazilim.com

# Frontend API URL
VITE_API_BASE_URL=https://api.decayazilim.com

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Security Configuration
SESSION_SECRET=your_session_secret_minimum_32_characters_long
BCRYPT_ROUNDS=12
